<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/navigation_explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsActivity__Explanation"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigate_all_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/navigate_all_button"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle" />

    <TextView
        android:id="@+id/no_introductions_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsActivity__No_Introductions_from"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigate_all_button"
        app:layout_constraintBottom_toBottomOf="@id/navigate_all_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle"
        tools:ignore="NotSibling" />

    <org.thoughtcrime.securesms.components.ButtonStripItemView
        android:id="@+id/navigate_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawablePadding="2dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:bsiv_icon="@drawable/ic_arrow_right"
        app:bsiv_label="@string/ManageIntroductionsFragment__navigate_text"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/introduction_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsActivity__Title_Introductions_from"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintVertical_bias="1"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        app:layout_constraintTop_toBottomOf="@id/navigate_all_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbarThumbVertical="@drawable/contact_selection_scrollbar_thumb"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/introduction_title_view"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/ti_manage_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>