<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/navigation_explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsFragment__Explanation"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigate_all_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="@id/barrier_title"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle" />

    <TextView
        android:id="@+id/no_introductions_found"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsFragment__No_Introductions_from"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigate_all_button"
        app:layout_constraintBottom_toBottomOf="@id/barrier_title"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle"
        />

    <org.thoughtcrime.securesms.components.ButtonStripItemView
        android:id="@+id/navigate_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawablePadding="2dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:bsiv_icon="@drawable/ic_arrow_end_24"
        app:bsiv_label="@string/ManageIntroductionsFragment__navigate_text"
        tools:ignore="NotSibling" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="navigate_all_button,no_introductions_found,navigation_explanation"/>

    <TextView
        android:id="@+id/introduction_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsFragment__Title_Introductions_from"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintVertical_bias="1"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle"
        app:layout_constraintTop_toBottomOf="@id/barrier_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/manage_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layout_constraintVertical_bias="1"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle"
        app:layout_constraintTop_toBottomOf="@id/barrier_title">

        <org.thoughtcrime.securesms.components.FromTextView
            android:id="@+id/date_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:drawablePadding="4dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/ManageIntroductionsListItemHeader__Date"
            android:textAppearance="@style/Signal.Text.BodyMedium"
            android:textColor="@color/signal_text_primary"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/from_header"
            tools:text="Date"/>

        <org.thoughtcrime.securesms.components.FromTextView
            android:id="@+id/from_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:drawablePadding="4dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/ManageIntroductionsListItemHeader__Introducer"
            android:textAppearance="@style/Signal.Text.BodyMedium"
            android:textColor="@color/signal_text_primary"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/date_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/half_guide_header"
            tools:text="From"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/half_guide_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <org.thoughtcrime.securesms.components.FromTextView
            android:id="@+id/introducee_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="4dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/ManageIntroductionsListItemHeader__Introducee"
            android:textAppearance="@style/Signal.Text.BodyLarge"
            android:textColor="@color/signal_text_primary"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="@id/half_guide_header"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Introducee"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="manage_fragment_header,introduction_title_view,navigate_all_button,no_introductions_found,navigation_explanation"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="?android:attr/actionBarSize"
        android:scrollbarThumbVertical="@drawable/contact_selection_scrollbar_thumb"
        android:scrollbars="vertical"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/barrier_recycle"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/ti_manage_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>