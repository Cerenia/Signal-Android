<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <org.thoughtcrime.securesms.util.views.DarkOverflowToolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/signal_m3_toolbar_height"
        android:theme="?attr/settingsToolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_left_24"
        app:title="@string/PickContactsForTIActivity_title"
        app:titleTextAppearance="@style/Signal.Text.Title" />

    <org.thoughtcrime.securesms.components.ContactFilterView
        android:id="@+id/introduction_filter_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/navigation_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsActivity__Explanation"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toBottomOf="@id/introduction_filter_edit_text"
        app:layout_constraintEnd_toStartOf="@id/navigate_all_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle" />

    <TextView
        android:id="@+id/no_introductions_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ManageIntroductionsActivity__No_Introductions_from"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toBottomOf="@id/introduction_filter_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigate_all_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle"
        tools:ignore="NotSibling" />

    <org.thoughtcrime.securesms.components.ButtonStripItemView
        android:id="@+id/navigate_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:drawablePadding="2dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introduction_filter_edit_text"
        app:bsiv_icon="@drawable/ic_arrow_right"
        app:bsiv_label="@string/ManageIntroductionsFragment__navigate_text"
        tools:ignore="NotSibling" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/trusted_introduction_manage_fragment"
        android:name="org.thoughtcrime.securesms.trustedIntroductions.receive.ManageListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigate_all_button" />


</androidx.constraintlayout.widget.ConstraintLayout>